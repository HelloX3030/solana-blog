{
	"name": "Solana Dev",
	"image": "ghcr.io/hellox3030/solana-env:v0.0.0",
	"customizations": {
		"vscode": {
			"extensions": [
				"rust-lang.rust-analyzer",
				"marquiswang.solana-snippets",
				"esbenp.prettier-vscode"
			],
			"settings": {
				"terminal.integrated.defaultProfile.linux": "bash"
			}
		}
	},
	"postCreateCommand": "solana --version && anchor --version && rustc --version && cargo --version && node --version && npm --version",
	"forwardPorts": [5173],
	"remoteUser": "root"
}