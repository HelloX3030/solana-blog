FROM ubuntu:22.04

RUN apt-get update && \
	apt-get install -y --no-install-recommends \
	curl \
	git \
	build-essential \
	pkg-config \
	libssl-dev \
	libudev-dev \
	python3 \
	python3-pip \
	ca-certificates \
	gnupg \
	bash \
	&& rm -rf /var/lib/apt/lists/*

RUN curl --proto '=https' --tlsv1.2 -sSfL https://solana-install.solana.workers.dev | bash

# Set workspace
WORKDIR /workspace

# Default shell
CMD ["/bin/bash"]
